<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">
      <i class="fa fa-chevron-circle-right" aria-hidden="true"></i>
      Teams <span class="badge pull-right"><%= @teams.count %> Teams</span>
    </h3>
  </div>
    <ul class="list-group">
      <% @teams.each do |team| %>
        <li class="list-group-item">
          <div class="media">
            <div class="media-left">
              <a href="#">
                <img class="media-object img-rounded" src="<%= team.image_url %>" width="64" height="64">
              </a>
            </div>
            <div class="media-body">
              <h4 class="media-heading">
                <%= team.name %>
                <span class="pull-right badge"><%= team.players.count %> Players</span>
              </h4>
              <%= team.description %>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  <div class="panel-footer">
    <nav aria-label="Page navigation" class="text-center">
      <ul class="pagination pagination-sm">
        <li>
          <a href="#" aria-label="Previous">
            <span aria-hidden="true">&laquo;</span>
          </a>
        </li>
        <li><a href="/?page=1">1</a></li>
        <li><a href="/?page=2">2</a></li>
        <li><a href="/?page=3">3</a></li>
        <li><a href="/?page=4">4</a></li>
        <li><a href="/?page=5">5</a></li>
        <li><a href="/?page=6">6</a></li>
        <li>
          <a href="#" aria-label="Next">
            <span aria-hidden="true">&raquo;</span>
          </a>
        </li>
      </ul>
    </nav>
  </div>
</div>

<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">
      <i class="fa fa-check-square-o" aria-hidden="true"></i>
      Games
    </h3>
  </div>
  <table class="table table-condensed">
    <thead>
       <tr>
         <th>#</th>
         <th>Home Team</th>
         <th>Away Team</th>
         <th>Home Score</th>
         <th>Away Score</th>
       </tr>
    </thead>
    <tbody>
      <% @games.each.with_index do |game, index| %>
        <tr class='success'>
          <th scope='row'><%= index + 1 %></th>
          <td><%= game.home_team.name %></td>
          <td><%= game.away_team.name %></td>
          <td><%= game.home_team_score %></td>
          <td><%= game.away_team_score %></td>
        </tr>
        <% end %>
    </tbody>
  </table>
</div>
